{
  "compilerOptions": {
    "baseUrl": ".", // Base directory for resolving paths
    "paths": {
      "@/*": ["src/*"] // Alias "@" maps to the "src" directory
    },
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
